{
    "manifest_version": 3,
    "name": "Amazon Hide Prices",
    "version": "0.1.3",
    "description": "Hide prices of products on amazon. Can be used to play a guessing game.",
    "action": {
        "default_icon": "on.png"
    },
    "permissions": [
        "tabs"
    ],
    "background": {
        "service_worker": "background_worker.js"
    },
    "content_scripts": [
        {
            "css": [
                "styles.scss"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "matches": [
                "https://*.amazon.de/*",
                "https://*.amazon.com/*"
            ]
        }
    ],
    "icons": {
        "128": "images/doge_icon128.png"
    }
}